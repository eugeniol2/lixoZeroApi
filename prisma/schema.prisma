generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User 

model User {
  id            String         @id @default(uuid())
  createdAt     DateTime       @default(now())
  image         String?
  name          String
  email         String         @unique
  password      String
  birthDate     String?
  totalPoints   Int            @default(0)
  UserAdress    UserAdress?
  UserQuizScore UserQuizScore?
}

model UserAdress {
  id           String  @id @default(uuid())
  street       String?
  city         String?
  neighborhood String?
  cep          String?
  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String  @unique
}

model UserQuizScore {
  id                  String  @id @default(uuid())
  fossil              Boolean @default(false)
  chemical            Boolean @default(false)
  manage              Boolean @default(false)
  residues            Boolean @default(false)
  sustainable         Boolean @default(false)
  sustainableCountry  Boolean @default(false)
  sustainableShopping Boolean @default(false)
  turism              Boolean @default(false)
  user                User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String  @unique
}

// mission

model MissionAdress {
  id           String  @id @default(uuid())
  street       String?
  city         String?
  uf           String?
  neighborhood String?
  cep          String?
  mission      Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)
  missionId    String  @unique
}

model MissionDetails {
  id        String  @id @default(uuid())
  contact   String?
  website   String?
  delivery  Boolean @default(false)
  mission   Mission @relation(fields: [missionId], references: [id], onDelete: Cascade)
  missionId String  @unique
}

enum MISSION_TYPE {
  DESCARTE
  TRATAMENTO
  QUIZ
}

model Mission {
  id          String       @id @default(uuid())
  reward      Int
  title       String
  openAt      DateTime?
  closedAt    DateTime?
  missionType MISSION_TYPE
  description String
  inProgress  Boolean      @default(false)

  MissionDetails MissionDetails?
  MissionAdress  MissionAdress?
}
