generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User 

model User {
  id            String          @id @default(uuid())
  createdAt     DateTime        @default(now())
  image         String?
  name          String
  email         String          @unique
  password      String
  birthDate     String?
  totalPoints   Int             @default(0)
  UserAdress    UserAdress[]
  UserQuizScore UserQuizScore[]
}

model UserAdress {
  id           String  @id @default(uuid())
  street       String?
  city         String?
  neighborhood String?
  cep          String?
  userAdressId String
  belongsTo    User    @relation(fields: [userAdressId], references: [id])

  @@unique([id, userAdressId])
}

model UserQuizScore {
  id                  String  @id @default(uuid())
  fossil              Boolean @default(false)
  chemical            Boolean @default(false)
  manage              Boolean @default(false)
  residues            Boolean @default(false)
  sustainable         Boolean @default(false)
  sustainableCountry  Boolean @default(false)
  sustainableShopping Boolean @default(false)
  turism              Boolean @default(false)
  userAdressId        String
  belongsTo           User    @relation(fields: [userAdressId], references: [id])

  @@unique([id, userAdressId])
}
